@model IEnumerable<suaBaladaAqui2.Models.CarouselModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FrasePrincipal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FraseSecundaria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordenacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FrasePrincipal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FraseSecundaria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ordenacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
