@model suaBaladaAqui2.Models.CarouselModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CarouselModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <!--<label asp-for="Imagem" class="control-label"></label>
                <input asp-for="Imagem" class="form-control" />
                <span asp-validation-for="Imagem" class="text-danger"></span>-->

                <label asp-for="Imagem" class="control-label"></label>
                <input type="file" name="imagemFoto" id="imgFoto" class="form-control" />
                <input asp-for="Imagem" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="FrasePrincipal" class="control-label"></label>
                <input asp-for="FrasePrincipal" class="form-control" />
                <span asp-validation-for="FrasePrincipal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FraseSecundaria" class="control-label"></label>
                <input asp-for="FraseSecundaria" class="form-control" />
                <span asp-validation-for="FraseSecundaria" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativa" /> @Html.DisplayNameFor(model => model.Ativa)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Ordenacao" class="control-label"></label>
                <input asp-for="Ordenacao" class="form-control" />
                <span asp-validation-for="Ordenacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img id="imgSelecionada" src="@ViewBag.imagemEvento" height="300"  width="400">
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
